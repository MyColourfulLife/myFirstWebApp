<!DOCTYPE html>
<html>

<head>
    <title>
        <%= title %>
    </title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link href="https://cdn.bootcss.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.bootcss.com/vue/2.4.4/vue.min.js"></script>
    <script src="https://cdn.bootcss.com/axios/0.16.2/axios.min.js"></script>
</head>

<body>
    <div id="app">


        <div class="container">
            <div class="col-md-8 col-md-offset-2">
                <h1>创作你的创作</h1>
                <div class="form-group">
                    <label for="exampleInputEmail1">文章标题</label>
                    <input type="text" class="form-control" id="exampleInputEmail1" placeholder="文章标题" v-model="title">
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">正文</label>
                    <textarea class="form-control" rows="10" v-model="content" placeholder="请输入正文"></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-default" v-on:click="submit">提交</button>
                </div>
            </div>
        </div>


    </div>
</body>

</html>

<script>
    new Vue({
        el: '#app',
        data: {
            title: "",
            content: ""
        },
        methods: {
            submit() {
                axios.post('/api/post', {
                    title: this.title,
                    content: this.content
                }).then(function (res) {
                    alert(JSON.stringify(res.data));
                }).catch(function (err) {
                    alert(err);
                });
            }
        }
    });
</script>